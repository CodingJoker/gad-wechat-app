    .container .more-msg .icon {
      display: inline-block;
      vertical-align: top;
      width: 80rpx;
      height: 80rpx;
      background: url("../../statics/image/up-more.png") no-repeat 30% 50%;
      background-size: 50%; }
    .container .more-msg .msg {
      display: inline-block;
      color: #18aa48; }
