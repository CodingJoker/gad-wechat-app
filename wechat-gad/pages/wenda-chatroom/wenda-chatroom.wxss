.bob {
  border-bottom: 1rpx solid #ccc; }

.container {
  display: block;
  box-sizing: border-box;
  height: 100vh;
  padding: 20rpx; }
  .container .room-info {
    display: block;
    height: 150rpx;
    padding-bottom: 30rpx; }
    .container .room-info .attavr {
      display: inline-block;
      vertical-align: middle;
      width: 150rpx;
      height: 150rpx; }
      .container .room-info .attavr image {
        border-radius: 50%;
        width: 100%;
        height: 100%; }
    .container .room-info .name {
      display: inline-block;
      vertical-align: middle;
      box-sizing: border-box;
      width: 560rpx;
      padding-top: 10rpx;
      padding-left: 20rpx;
      height: 100%; }
  .container .topic-info {
    display: block;
    box-sizing: border-box;
    padding: 25rpx 20rpx; }
    .container .topic-info .head {
      display: block;
      padding-bottom: 10rpx; }
    .container .topic-info .text {
      display: block;
      font-size: 30rpx;
      color: #717171; }
  .container .chat-box {
    display: block;
    margin-top: 20rpx; }
    .container .chat-box .loading {
      display: block;
      text-align: center;
      height: 30rpx;
      font-size: 25rpx;
      background-color: #FFFFFF;
      padding-bottom: 20rpx;
      color: #c9c9c9; }
    .container .chat-box .time {
      display: block;
      text-align: center;
      height: 30rpx;
      font-size: 25rpx;
      background-color: #FFFFFF;
      padding-bottom: 20rpx;
      color: #c9c9c9; }
    .container .chat-box .inner {
      display: block;
      width: 100%;
      margin-bottom: 30rpx;
      min-height: 100rpx; }
      .container .chat-box .inner .head {
        display: inline-block;
        padding-top: 40rpx;
        vertical-align: top;
        width: 100rpx;
        height: 100rpx;
        margin-right: 10rpx; }
        .container .chat-box .inner .head image {
          border-radius: 50%;
          width: 100%;
          height: 100%; }
      .container .chat-box .inner .ctx {
        display: inline-block;
        width: 500rpx; }
        .container .chat-box .inner .ctx .name {
          display: block;
          vertical-align: bottom;
          height: 40rpx;
          font-size: 25rpx;
          color: #717171;
          padding-left: 10rpx; }
          .container .chat-box .inner .ctx .name .user-role {
            display: inline-block;
            margin-right: 20rpx;
            vertical-align: middle;
            height: 40rpx; }
            .container .chat-box .inner .ctx .name .user-role .icon {
              display: inline-block;
              width: 40rpx;
              height: 40rpx;
              margin-right: 10rpx; }
              .container .chat-box .inner .ctx .name .user-role .icon.admin {
                background: url("../../statics/image/admin.png") no-repeat 10% 10%;
                background-size: 90%; }
            .container .chat-box .inner .ctx .name .user-role .role-name {
              display: inline-block;
              vertical-align: top;
              color: #2f8cff; }
          .container .chat-box .inner .ctx .name .user-name {
            display: inline-block;
            vertical-align: top;
            height: 40rpx;
