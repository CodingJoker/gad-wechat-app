.wenda-container {
  background: #EBEBEB; }
  .wenda-container .wenda-list {
    width: 100%;
    display: border-box;
    padding-top: 20rpx;
    padding-bottom: 20rpx; }
    .wenda-container .wenda-list .item {
      background: #fff;
      display: block;
      height: 250rpx;
      display: border-box;
      padding: 20rpx 20rpx;
      margin-bottom: 10rpx; }
      .wenda-container .wenda-list .item .left {
        display: inline-block;
        width: 480rpx;
        height: 100%;
        vertical-align: top; }
        .wenda-container .wenda-list .item .left .title {
          display: block;
          font-weight: 600;
          font-size: 40rpx;
          height: 70rpx;
          line-height: 70rpx; }
        .wenda-container .wenda-list .item .left .customer-name {
          display: block;
          font-size: 30rpx;
          color: #999; }
          .wenda-container .wenda-list .item .left .customer-name text:not(:last-child):after {
            content: ","; }
      .wenda-container .wenda-list .item .right {
        display: inline-block;
        width: 230rpx;
        height: 100%;
        vertical-align: top; }
        .wenda-container .wenda-list .item .right .attavr {
          margin-left: 20rpx;
          width: 190rpx;
          height: 190rpx;
          border-radius: 95rpx; }
        .wenda-container .wenda-list .item .right .status text {
          display: block;
          width: 100%;
          height: 60rpx;
          line-height: 60rpx;
          border-radius: 10rpx;
          text-align: center;
          font-size: 30rpx; }
        .wenda-container .wenda-list .item .right .status .on {
          background: #CE4537;
          color: #fff; }
        .wenda-container .wenda-list .item .right .status .off {
          border: 1rpx solid #C5C5C5;
          background: transparent;
          color: #b5b5b5; }
        .wenda-container .wenda-list .item .right .status .not-ready {
          border: 1rpx solid #626CF5;
          color: #626CF5; }
