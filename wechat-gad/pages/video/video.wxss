.scroll-view {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  width: 100%; }

.video-content {
  box-sizing: border-box;
  min-height: 600rpx;
  width: 100%;
  padding: 10rpx 0;
  background: #EBEBEB; }
  .video-content .video {
    position: relative;
    box-sizing: border-box;
    height: 700rpx;
    margin: 20rpx 20rpx;
    background: #fff; }
    .video-content .video video {
      width: 100%;
      height: 560rpx; }
    .video-content .video .cover {
      position: absolute;
      left: 0;
      top: 0;
      width: 100%;
      height: 560rpx;
      z-index: 999;
      box-sizing: border-box;
      width: 100%; }
      .video-content .video .cover .bc {
        position: absolute;
        top: 0;
        z-index: 999;
        width: 100%;
        height: 100%;
        background: rgba(123, 144, 141, 0.6); }
      .video-content .video .cover > .cover-img {
        position: absolute;
        top: 0;
        width: 100%;
        height: 100%;
        z-index: 900; }
      .video-content .video .cover > .play {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 150rpx;
        height: 150rpx;
        z-index: 999; }
    .video-content .video .title {
      display: block;
      box-sizing: border-box;
      padding: 0 10rpx;
      height: 50rpx;
      font-size: 30rpx; }
    .video-content .video .ac-b {
      display: block;
      margin-top: 10rpx;
      box-sizing: border-box;
      padding-left: 10rpx;
      height: 50rpx; }
      .video-content .video .ac-b text {
        display: inline-block;
        vertical-align: middle;
        font-size: 30rpx;
        color: #999; }
      .video-content .video .ac-b image {
        display: inline-block;
        vertical-align: middle;
        width: 36rpx;
        height: 36rpx;
        margin-right: 5rpx; }
      .video-content .video .ac-b .lc {
        display: inline-block;
        width: 200rpx;
        height: 100%;
        line-height: 100%; }
      .video-content .video .ac-b .vc {
        display: inline-block;
        width: 235rpx;
        height: 100%;
        line-height: 100%;
        text-align: center; }
      .video-content .video .ac-b .cc {
        display: inline-block;
        width: 235rpx;
        height: 100%;
        line-height: 100%;
        text-align: right; }
